<section class="admin-fade-bg">

   <nav class="navbar navbar-expand-lg navbar-light bg-adminNav">
    <div class="adminNav-container container-fluid">
      <%= link_to 'Horticulture Club Tracker', dashboard_path, class: "navbar-brand text-white" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto adminNav-options">
          <li class="nav-item">
            <%= link_to 'Events', events_path, class: "nav-link", aria_current: "page" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Members
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to "Points", points_path, class: "dropdown-item" %></li>
              <li><%= link_to "Leaderboard", leaderboard_path, class: "dropdown-item bg-adminNav-dropdown-active" %></li>
              <li><%= link_to "Members", members_path, class: "dropdown-item" %></li>
              <li><%= link_to "Positions", positions_path, class: "dropdown-item" %></li>
            </ul>
          </li>
          <li class="nav-item">
            <%= link_to "Plants", plants_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Admins", eligible_admins_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

   <div class="admin-white-bg">
   
      <h1 class="admin-page-title">Points Leaderboard</h1>

      <div class="admin-leaderboard-wrapper">

         <h6 class="admin-column-title">Name</h6>
         <h6 class="admin-column-title">Total Points</h6>

         <% @members.each do |member| %>
            <p>
            <%= link_to member_path(member.id) do %>
               <%= member.name %>
            <% end %>
            </p>
            <p><%= member.points %></p>
         <% end %>
      </div>
      <div class="admin-attribute-links admin-plant-links">
         <%= link_to 'Back to Dashboard', dashboard_path, class: "admin-attribute-back-link admin-leaderboard-link"%>
         <%= link_to 'View Events', events_path, class: "admin-attribute-active-link"%>
      </div>

   </div>

</section>