

<div class="leaderboard-wrapper">
   <h1>Leaderboard</h1>
   <table>
      <tr>
         <th>Member Name</th>
         <th>Total Points</th>
      </tr>
      <% @members.each do |member| %>
         <div>
            <tr>
               <td>
                  <%= link_to member_path(member.id) do %>
                     <%= member.name %>
                  <% end %>
               </td>
               <td><%= member.points %></td>
            </tr>
         </div>
            
      <% end %>
   </table>

   <%= link_to 'Back', root_path %>
   <br>
   <%= link_to 'Edit Members', members_path %>
   <br>
   <%= link_to 'Dashboard', root_path %>
</div>