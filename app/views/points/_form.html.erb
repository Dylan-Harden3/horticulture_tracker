<section class="admin-fade-bg">

  <nav>
  </nav>

  <div class="admin-white-bg">

    <h1 class="admin-page-title">New Points</h1>

    <%= form_with(model: point) do |form| %>
      <% if point.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(point.errors.count, "error") %> prohibited this point from being saved:</h2>

          <ul>
            <% point.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
     <div class="field">
        <%= form.label :member_id %>
        <%= form.select :member_id, Member.order(:name).map{|user| [user.name, user.id]} %>
      </div>

      <div class="field">
        <%= form.label :event_id %>
        <%= form.select :event_id, Event.order(:description).map{|event| [event.description, event.id]} %>
      </div>


      <div class="admin-attribute-links admin-plant-links">
        <%= link_to 'Back to Points', points_path, class: "admin-attribute-back-link" %>
        <div class="actions">
          <%= form.submit %>
        </div>
      </div>
    <% end %>
  </div>

</section>