<section class="admin-fade-bg">

  <nav class="navbar navbar-expand-lg navbar-light bg-adminNav">
    <div class="adminNav-container container-fluid">
      <%= link_to 'Horticulture Club Tracker', dashboard_path, class: "navbar-brand text-white" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto adminNav-options">
          <li class="nav-item">
            <%= link_to 'Events', events_path, class: "nav-link", aria_current: "page" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Members
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to "Points", points_path, class: "dropdown-item bg-adminNav-dropdown-active" %></li>
              <li><%= link_to "Leaderboard", leaderboard_path, class: "dropdown-item" %></li>
              <li><%= link_to "Members", members_path, class: "dropdown-item" %></li>
              <li><%= link_to "Positions", positions_path, class: "dropdown-item" %></li>
            </ul>
          </li>
          <li class="nav-item">
            <%= link_to "Plants", plants_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Admins", eligible_admins_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="admin-white-bg">

    <h1 class="admin-page-title">Member Points</h1>

    <p id="notice"><%= notice %></p>

    <%= link_to 'Add New Points', new_point_path, class: "admin-new-btn"%>

    <div class="admin-point-wrapper">

      <h6 class="admin-column-title">Member Name</h6>
      <h6 class="admin-column-title">Event</h6>
      <div></div>

      <% @points.each do |point| %>
        <p> 
          <%= link_to member_path(point.member_id) do %>
            <%= Member.find(point.member_id).name %>
          <% end %>
        </p>
        <p>
          <%= link_to event_path(point.event_id) do %>
            <%= Event.find(point.event_id).description %>
          <% end %>
        </p>
        <div class="admin-point-crud-icons">
          <%= link_to 'View Details', point, class: "attribute-show-btn" %>
          <%= link_to image_tag("edit.png", class: "attribute-icon"), edit_point_path(point) %>
          <%= link_to image_tag("delete.png", class: "attribute-icon"), point, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>

    </div>

  </div>

</section>